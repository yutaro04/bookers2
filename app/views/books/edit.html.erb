<h1>Editing Book</h1>
<%= form_for @book_edit, url: book_path do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<div>
	<p><%= link_to 'show',book_path %>|<%= link_to 'back', books_path %></p>
</div>