<style type="text/css" media="screen">
</style>
<section class="mine">
     <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<h1>User info</h1>
    <%= attachment_image_tag current_user, :profile_image, size:'150x150', fallback: "def.jpeg"  %>
    <table>
        <tr>
                <th>name</th><td><%= current_user.name %></td>
        </tr>
        <tr>
                <th>data</th><td><%= current_user.introduction %></td>
        </tr>
    </table>
    <%= link_to edit_user_path(current_user.id) do %>
　<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
<% end %>
</section>
<section class="create">
<h1>New Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<!-- form_for部分 -->
<%= form_for @book, url: books_path do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
</section>

<section class="detail">
 <h1>Users</h1>
 <table class="table">
 	<tr>
 		<th>image</th>
 		<th>name</th>
 		<th></th>
 	</tr>
 <% @users.each do |user| %>
    <tr>
    	<th><%= attachment_image_tag user, :profile_image, size:'50x50', fallback: "def.jpeg"  %></th>
    	<th><%= user.name %></th>
    	<th><%= link_to 'show', user_path(user.id) %></th>
    </tr>
 <% end %>
</table>
</section>